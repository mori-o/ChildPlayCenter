<Page x:Class="ChildPlayCenter.Pages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChildPlayCenter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage">

    <Grid Background="#FFF5E1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" 
                  Text="FunkyHall - Клиент" 
                  FontSize="28" 
                  FontFamily="Comic Sans MS" 
                  Foreground="#FF69B4" 
                  HorizontalAlignment="Center" 
                  Margin="0,20,0,20"/>

            <!-- Основной контент -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Таблица услуг -->
                <Border Grid.Column="0" 
                    Background="#FFFFFF" 
                    CornerRadius="15" 
                    BorderBrush="#FF69B4" 
                    BorderThickness="2" 
                    Padding="10" 
                    Margin="0,0,10,0">
                    <DataGrid x:Name="ServicesGrid" 
                         AutoGenerateColumns="False" 
                         BorderThickness="0" 
                         Background="Transparent" 
                         RowBackground="#FFF5E1" 
                         AlternatingRowBackground="#FFE8D6">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" 
                                           Binding="{Binding Name}" 
                                           Width="*" 
                                           FontSize="16" 
                                           Foreground="#555555"/>
                            <DataGridTextColumn Header="Цена" 
                                           Binding="{Binding Price}" 
                                           Width="*" 
                                           FontSize="16" 
                                           Foreground="#555555"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Добавить" 
                                           Click="AddToCart_Click" 
                                           Tag="{Binding Id}" 
                                           Background="#FF69B4" 
                                           Foreground="White" 
                                           BorderThickness="0" 
                                           Padding="5" 
                                           FontSize="14" 
                                           Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Корзина -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Border Background="#FFFFFF" 
                        CornerRadius="15" 
                        BorderBrush="#FFB347" 
                        BorderThickness="2" 
                        Padding="10">
                        <DataGrid x:Name="CartGrid" 
                             AutoGenerateColumns="False" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             RowBackground="#FFF5E1" 
                             AlternatingRowBackground="#FFE8D6">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Название" 
                                               Binding="{Binding Service.Name}" 
                                               Width="*" 
                                               FontSize="16" 
                                               Foreground="#555555"/>
                                <DataGridTextColumn Header="Цена" 
                                               Binding="{Binding Service.Price}" 
                                               Width="*" 
                                               FontSize="16" 
                                               Foreground="#555555"/>
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Удалить" 
                                               Click="RemoveFromCart_Click" 
                                               Tag="{Binding Id}" 
                                               Background="#FFB347" 
                                               Foreground="White" 
                                               BorderThickness="0" 
                                               Padding="5" 
                                               FontSize="14" 
                                               Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <Button Content="Оформить заказ" 
                        Click="PlaceOrder_Click" 
                        Background="#FF69B4" 
                        Foreground="White" 
                        FontSize="16" 
                        BorderThickness="0" 
                        Margin="0,10,0,0" 
                        Height="40" 
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Декоративные иконки -->
            <TextBlock Text="" 
                  FontFamily="Segoe MDL2 Assets" 
                  FontSize="50" 
                  Foreground="#FFB347" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Margin="20"/>
            <TextBlock Text="" 
                  FontFamily="Segoe MDL2 Assets" 
                  FontSize="50" 
                  Foreground="#FF69B4" 
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Bottom" 
                  Margin="20"/>
        </Grid>
    </Page>
