<Page x:Class="ChildPlayCenter.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChildPlayCenter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Вход в систему" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="LoginTextBox" Margin="0,0,0,10" Text="Логин"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Войти" Width="80" Margin="0,0,10,0" Click="LoginButton_Click"/>
                <Button Content="Войти как гость" Width="120" Click="GuestButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
