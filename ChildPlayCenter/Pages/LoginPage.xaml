<Page x:Class="ChildPlayCenter.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChildPlayCenter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#FFF5E1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основной контейнер -->
        <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="15" Padding="20" 
                BorderBrush="#FF69B4" BorderThickness="2" Width="300" Height="350">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Заголовок -->
                <TextBlock Text="FunkyHall - Вход" 
                          FontSize="28" 
                          FontFamily="Comic Sans MS" 
                          Foreground="#FF69B4" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,30"/>

                <!-- Поле логина с иконкой -->
                <DockPanel Margin="0,0,0,15">
                    <TextBlock Text="&#xE77B;" 
                              FontFamily="Segoe MDL2 Assets" 
                              FontSize="20" 
                              Foreground="#FF69B4" 
                              Margin="0,0,10,0"/>
                    <!-- Иконка пользователя -->
                    <TextBox x:Name="LoginTextBox" 
                            Text="Логин" 
                            FontSize="16" 
                            Foreground="#555555" 
                            BorderBrush="#FFB347" 
                            BorderThickness="1" 
                            Padding="5" 
                            Width="200"/>
                </DockPanel>

                <!-- Поле пароля с иконкой -->
                <DockPanel Margin="0,0,0,25">
                    <TextBlock Text="&#xE8AB;"
                              FontFamily="Segoe MDL2 Assets" 
                              FontSize="20" 
                              Foreground="#FF69B4" 
                              Margin="0,0,10,0"/>
                    <!-- Иконка замка -->
                    <PasswordBox x:Name="PasswordBox" 
                                FontSize="16" 
                                BorderBrush="#FFB347" 
                                BorderThickness="1" 
                                Padding="5" 
                                Width="200"/>
                </DockPanel>

                <!-- Кнопки -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Войти" 
                            Width="100" 
                            Height="40" 
                            Margin="0,0,15,0" 
                            Click="LoginButton_Click" 
                            Background="#FF69B4" 
                            Foreground="White" 
                            FontSize="16" 
                            BorderThickness="0" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Войти как гость" 
                            Width="140" 
                            Height="40" 
                            Click="GuestButton_Click" 
                            Background="#FFB347" 
                            Foreground="White" 
                            FontSize="16" 
                            BorderThickness="0" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Декоративные элементы с иконками -->
        <TextBlock Grid.Row="0" 
                  Text="&#xE734;" 
                  FontFamily="Segoe MDL2 Assets" 
                  FontSize="50" 
                  Foreground="#FFB347" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Margin="20"/>
        <!-- Иконка шарика -->
        <TextBlock Grid.Row="2" 
                  Text="&#xE735;" 
                  FontFamily="Segoe MDL2 Assets" 
                  FontSize="50" 
                  Foreground="#FF69B4" 
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Bottom" 
                  Margin="20"/>
        <!-- Иконка звезды -->
    </Grid>
</Page>
